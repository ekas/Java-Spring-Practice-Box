<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id="address" class="com.spring.info.Address">
    	<property name = "street" value = "Nyay Khand - 3"/>
    	<property name = "buildNo" value = "396-B"/>
    	<property name = "city" value = "Indirapuram"/>
    </bean>
    
    <bean id="person" class="com.spring.info.Person">
    	<property name = "firstName" value = "Ekaspreet"/>
    	<property name = "lastName" value = "Singh"/>
    	<property name = "address" ref = "address"/>
    </bean>
</beans>